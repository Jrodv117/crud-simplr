<%- include('../partials/header') %>
<section id="show-page">
    <div>Title: </div>
    <div><%= blog.title %></div>
    <div>Release Year: </div>
    <div><%= blog.text %></div>
  </section>

  <br><br>
  <% if (user) { %>
  <h2>Comments</h2>
  <form id="add-comments-form" method="POST" action="/blogs/<%= blog._id %>/comments">
    <label>Comment:</label>
    <textarea name="content"></textarea>
    <input type="submit" value="Add Comment">
  </form>
  <% } else { %>
    <button>
        <a href="/auth/google" class="login">Log In To Post A Comment&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"></a>
    </button> 
    <% } %>
  <% if (blog.comments.length) { %>
    <table>
      <thead>
        <tr>
          <th>Comment</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% blog.comments.forEach(function(r) { %>
          <tr>
            <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>"><%= r.userName %></td>
            <td><%= r.content %></td>
            <td>
              <% if (user && user._id.equals(r.user)) { %>
                <form action="/comments/<%= r._id %>?_method=DELETE" method="POST">
                  <button type="submit">X</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }); %>
        <tr>
          <td colspan="2"></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>
 <%- include('../partials/footer') %>